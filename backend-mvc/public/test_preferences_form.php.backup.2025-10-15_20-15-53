        ]);
        
        $userRepository = new \App\Repository\UserRepository($pdo);
        $preferencesRepository = new \App\Repository\NotificationPreferencesRepository($pdo);
        
        $userId = $_SESSION['user']['id'];
        
        // Sauvegarder les prÃ©fÃ©rences
        $preferences = [
            'user_id' => $userId,
