{% extends "base.html.twig" %}

{% block title %}Équipe Beta - TerrainTrack{% endblock %}

{# Fonctions de traduction des statuts et priorités #}
{% set status_translations = {
  'pending': 'En attente',
  'in-progress': 'En cours',
  'in_progress': 'En cours', 
  'done': 'Terminée',
  'completed': 'Terminée',
  'cancelled': 'Annulée',
  'scheduled': 'Planifiée'
} %}

{% set priority_translations = {
  'low': 'Faible',
  'medium': 'Moyenne',
  'high': 'Élevée',
  'critical': 'Critique'
} %}

{% block extra_head %}
<style>
    .team-details-container {
        background-color: #f8f9fa;
        padding: 2rem;
        border-radius: 12px;
    }
    .team-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    .team-header .back-link {
        color: #6c757d;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
    }
    .team-header .team-icon {
        font-size: 2.5rem;
        color: #fff;
        background-color: #0d6efd;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .team-header .team-name {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
    }
    .team-header .team-lead {
        font-size: 1rem;
        color: #6c757d;
    }
    .stat-card {
        background-color: #fff;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        height: 100%;
    }
    .stat-card .stat-icon {
        font-size: 1.8rem;
        padding: 0.7rem;
        border-radius: 8px;
    }
    .stat-card .stat-icon.members { color: #0d6efd; background-color: #e7f1ff; }
    .stat-card .stat-icon.vehicles { color: #dc3545; background-color: #fdeaea; }
    .stat-card .stat-icon.active-interventions { color: #6f42c1; background-color: #f1eefe; }
    .stat-card .stat-icon.completed-interventions { color: #198754; background-color: #e8f3ee; }
    .stat-card .stat-info .stat-title {
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 0.2rem;
    }
    .stat-card .stat-info .stat-number {
        font-size: 1.75rem;
        font-weight: 700;
    }
    .stat-card .stat-info .stat-extra {
        font-size: 0.9rem;
        color: #198754;
        font-weight: 500;
    }
    .team-tabs {
        border-bottom: 1px solid #dee2e6;
        margin-bottom: 1.5rem;
    }
    .team-tabs .nav-link {
        color: #6c757d;
        font-weight: 500;
        border: none;
        border-bottom: 3px solid transparent;
        padding: 0.8rem 0;
        margin-right: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .team-tabs .nav-link.active {
        color: #0d6efd;
        border-bottom-color: #0d6efd;
    }
    .widget-card {
        background-color: #fff;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    .widget-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    .member-list .member-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.8rem 0;
        border-bottom: 1px solid #f1f3f5;
    }
    .member-list .member-item:last-child {
        border-bottom: none;
    }
    .member-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .member-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #e7f1ff;
        color: #0d6efd;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }
    .member-name {
        font-weight: 600;
    }
    .member-email {
        color: #6c757d;
        font-size: 0.9rem;
    }
    .role-badge {
        font-size: 0.85rem;
        font-weight: 500;
        padding: 0.3em 0.8em;
        border-radius: 16px;
    }
    .role-badge.chef { background-color: #e7f1ff; color: #0d6efd; }
    .role-badge.technicien { background-color: #e8f7f7; color: #17a2b8; }
    .role-badge.mecanicien { background-color: #e8f3ee; color: #198754; }
    .map-placeholder {
        height: 250px;
        background: url('https://i.stack.imgur.com/3o1sL.png') no-repeat center center;
        background-size: cover;
        border-radius: 8px;
        margin-bottom: 1rem;
        position: relative;
    }
    .intervention-item {
        border-bottom: 1px solid #f1f3f5;
        padding-bottom: 1rem;
        margin-bottom: 1rem;
    }
    .intervention-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }
    .intervention-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
    }
    .intervention-title {
        font-weight: 600;
    }
    .intervention-pills {
        display: flex;
        gap: 0.5rem;
    }
    .intervention-pill {
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.25em 0.7em;
        border-radius: 12px;
    }
    .pill-inprogress { background-color: #e7f1ff; color: #0d6efd; }
    .pill-completed { background-color: #e8f3ee; color: #198754; }
    .pill-high-priority { background-color: #fff8e1; color: #ffc107; }
    .pill-critical-priority { background-color: #fdeaea; color: #dc3545; }
    .intervention-details {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        color: #6c757d;
        font-size: 0.9rem;
    }
    .member-card {
        background-color: #fff;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        height: 100%;
    }
    .member-card .member-avatar {
        margin: 0 auto 1rem auto;
    }
    .vehicle-card-item {
        background-color: #fff;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 1.5rem;
        height: 100%;
    }
    .vehicle-card-item .vehicle-icon {
        font-size: 1.8rem;
        margin-right: 1rem;
    }
</style>
{% endblock %}

{% block content %}
<div class="team-details-container">
    <!-- Header -->
    <div class="team-header">
        <a href="/exemple/backend-mvc/public/teams" class="back-link"><i class="bx bx-arrow-back"></i> Retour</a>
        <div class="team-icon"><i class='bx bxs-user-group'></i></div>
        <div>
            <h3 class="team-name">Équipe Beta</h3>
            <div class="team-lead">Chef d'équipe: Marie Petit</div>
        </div>
        <button class="btn btn-primary ms-auto" onclick="window.location.href='/exemple/backend-mvc/public/teams/{{ team.id }}/edit'"><i class="bx bx-edit"></i> Modifier</button>
    </div>

    <!-- Message de succès -->
    {% if session.success_message is defined %}
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-bottom: 1.5rem;">
        <i class="bx bx-check-circle me-2"></i>
        {{ session.success_message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <!-- Stats -->
    <div class="row mb-4 g-4">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon members"><i class='bx bxs-user-group'></i></div>
                <div class="stat-info">
                    <div class="stat-title">Membres</div>
                    <div class="stat-number">2</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon vehicles"><i class='bx bxs-car'></i></div>
                <div class="stat-info">
                    <div class="stat-title">Véhicules</div>
                    <div class="stat-number">3</div>
                    <div class="stat-extra">1 disponibles</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon active-interventions"><i class='bx bxs-calendar-event'></i></div>
                <div class="stat-info">
                    <div class="stat-title">Interventions actives</div>
                    <div class="stat-number">2</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon completed-interventions"><i class='bx bx-check-circle'></i></div>
                <div class="stat-info">
                    <div class="stat-title">Interventions terminées</div>
                    <div class="stat-number">1</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav team-tabs" id="teamTabs">
        <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#tab-overview"><i class='bx bx-tachometer'></i> Vue d'ensemble</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab-members"><i class='bx bx-group'></i> Membres</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab-vehicles"><i class='bx bx-car'></i> Véhicules</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab-interventions"><i class='bx bx-wrench'></i> Interventions</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#tab-performance"><i class='bx bx-line-chart'></i> Performance</a></li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab-overview">
            <div class="row">
                <div class="col-lg-7">
                    <!-- Membres de l'équipe -->
                    <div class="widget-card">
                        <h4 class="widget-title">Membres de l'équipe</h4>
                        <div class="member-list">
                            {% for member in team.members %}
                            <div class="member-item">
                                <div class="member-info">
                                    <div class="member-avatar">{{ member.initials }}</div>
                                    <div>
                                        <div class="member-name">{{ member.name }}</div>
                                        <div class="member-email">{{ member.email }}</div>
                                    </div>
                                </div>
                                <span class="role-badge role-badge-{{ member.role|lower }}">{{ member.role|capitalize }}</span>
                            </div>
                            {% else %}
                            <div class="text-muted text-center py-3">Aucun membre dans cette équipe.</div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Interventions récentes -->
                    <div class="widget-card">
                        <h4 class="widget-title">Interventions récentes</h4>
                        <div class="intervention-list">
                            <div class="intervention-item">
                                <div class="intervention-header">
                                    <div class="intervention-title">Field Clearing Operation</div>
                                    <div class="intervention-pills">
                                        <span class="intervention-pill pill-inprogress">En cours</span>
                                        <span class="intervention-pill pill-high-priority">Priorité Élevée</span>
                                    </div>
                                </div>
                                <div>Clear fallen trees after storm in northern sector</div>
                                <div class="intervention-details mt-2">
                                     <span><i class='bx bx-calendar me-1'></i> 15 May 2025, 12:00</span>
                                     <span><i class='bx bxs-user me-1'></i> 2 technicians</span>
                                     <span><i class='bx bx-map-pin me-1'></i> Northern Forest Sector, Route 12</span>
                                </div>
                            </div>
                            <div class="intervention-item">
                                <div class="intervention-header">
                                    <div class="intervention-title">Emergency Bridge Repair</div>
                                    <div class="intervention-pills">
                                        <span class="intervention-pill pill-completed">Terminée</span>
                                        <span class="intervention-pill pill-critical-priority">Priorité Critique</span>
                                    </div>
                                </div>
                                <div>Structural support needed for damaged bridge</div>
                                <div class="intervention-details mt-2">
                                     <span><i class='bx bxs-truck me-1'></i> All-Terrain Truck AT-350</span>
                                     <span><i class='bx bx-calendar me-1'></i> 14 May 2025, 13:00</span>
                                     <span><i class='bx bxs-user me-1'></i> 3 technicians</span>
                                </div>
                                <div class="intervention-details mt-1">
                                     <span><i class='bx bx-map-pin me-1'></i> River Crossing, South Sector</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <!-- Localisation -->
                    <div class="widget-card">
                        <h4 class="widget-title">Localisation des véhicules</h4>
                        <div class="map-placeholder"></div>
                        <div class="text-muted small text-center">Map data © TerrainTrack</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab: Membres -->
        <div class="tab-pane fade" id="tab-members">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="widget-title mb-0">Membres de l'équipe ({{ team.members|length }})</h4>
                <a href="/exemple/backend-mvc/public/teams/{{ team.id }}/members/create" class="btn btn-primary"><i class="bx bx-user-plus"></i> Ajouter un membre</a>
            </div>
            <div class="row g-4">
                {% for member in team.members %}
                <div class="col-md-6 col-lg-4">
                    <div class="member-card">
                        <div class="member-avatar">{{ member.initials }}</div>
                        <div class="member-name">{{ member.name }}</div>
                        <div class="member-email mb-2">{{ member.email }}</div>
                        <span class="role-badge role-badge-{{ member.role|lower }}">{{ member.role|capitalize }}</span>
                        <div class="text-muted small mt-2">{{ member.phone }}</div>
                    </div>
                </div>
                {% else %}
                <div class="col-12">
                    <div class="text-muted text-center py-5">Aucun membre dans cette équipe.</div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Tab: Véhicules -->
        <div class="tab-pane fade" id="tab-vehicles">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="widget-title mb-0">Véhicules assignés (3)</h4>
                <a href="/teams/{{ team.id }}/edit" class="btn btn-primary"><i class="bx bx-plus"></i> Assigner un véhicule</a>
            </div>
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="vehicle-card-item">
                        <div class="d-flex align-items-center mb-2">
                           <i class='bx bxs-truck vehicle-icon' style="color: #198754;"></i>
                           <h5 class="mb-0" style="font-size: 1.1rem;">All-Terrain Truck AT-350</h5>
                        </div>
                        <span class="badge bg-success">Disponible</span>
                        <div class="text-muted small mt-2"><i class="bx bx-map me-1"></i> 48.8500, 2.3500</div>
                        <div class="text-muted small mt-1"><i class="bx bx-time me-1"></i> Mis à jour il y a 10 jours</div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="vehicle-card-item">
                         <div class="d-flex align-items-center mb-2">
                           <i class='bx bxs-tractor vehicle-icon' style="color: #0d6efd;"></i>
                           <h5 class="mb-0" style="font-size: 1.1rem;">Heavy Duty Tractor T-800</h5>
                        </div>
                        <span class="badge bg-primary">En Intervention</span>
                        <div class="text-muted small mt-2"><i class="bx bx-map me-1"></i> 48.8600, 2.3600</div>
                        <div class="text-muted small mt-1"><i class="bx bx-time me-1"></i> Mis à jour il y a 5 jours</div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="vehicle-card-item">
                         <div class="d-flex align-items-center mb-2">
                           <i class='bx bxs-car-mechanic vehicle-icon' style="color: #ffc107;"></i>
                           <h5 class="mb-0" style="font-size: 1.1rem;">Utility Quad Pro</h5>
                        </div>
                        <span class="badge bg-warning text-dark">Maintenance</span>
                        <div class="text-muted small mt-2"><i class="bx bx-map me-1"></i> 48.8700, 2.3700</div>
                        <div class="text-muted small mt-1"><i class="bx bx-time me-1"></i> Mis à jour il y a 2 jours</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab: Interventions -->
        <div class="tab-pane fade" id="tab-interventions">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="widget-title mb-0">Interventions de l'équipe (2)</h4>
                <a href="/teams/{{ team.id }}/intervention/create" class="btn btn-primary"><i class="bx bx-plus"></i> Nouvelle intervention</a>
            </div>
            <div class="widget-card">
                <div class="intervention-list">
                    <!-- Contenu copié de la vue d'ensemble -->
                    <div class="intervention-item">
                        <div class="intervention-header">
                            <div class="intervention-title">Field Clearing Operation</div>
                            <div class="intervention-pills">
                                <span class="intervention-pill pill-inprogress">En cours</span>
                                <span class="intervention-pill pill-high-priority">Priorité Élevée</span>
                            </div>
                        </div>
                        <div>Clear fallen trees after storm in northern sector</div>
                        <div class="intervention-details mt-2">
                             <span><i class='bx bx-calendar me-1'></i> 15 May 2025, 12:00</span>
                             <span><i class='bx bxs-user me-1'></i> 2 technicians</span>
                             <span><i class='bx bx-map-pin me-1'></i> Northern Forest Sector, Route 12</span>
                        </div>
                    </div>
                    <div class="intervention-item">
                        <div class="intervention-header">
                            <div class="intervention-title">Emergency Bridge Repair</div>
                            <div class="intervention-pills">
                                <span class="intervention-pill pill-completed">Terminée</span>
                                <span class="intervention-pill pill-critical-priority">Priorité Critique</span>
                            </div>
                        </div>
                        <div>Structural support needed for damaged bridge</div>
                        <div class="intervention-details mt-2">
                             <span><i class='bx bxs-truck me-1'></i> All-Terrain Truck AT-350</span>
                             <span><i class='bx bx-calendar me-1'></i> 14 May 2025, 13:00</span>
                             <span><i class='bx bxs-user me-1'></i> 3 technicians</span>
                        </div>
                        <div class="intervention-details mt-1">
                             <span><i class='bx bx-map-pin me-1'></i> River Crossing, South Sector</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab: Performance -->
        <div class="tab-pane fade" id="tab-performance">
            <h4 class="widget-title mb-3">Performance de l'équipe</h4>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="widget-card text-center">
                        <div class="text-muted">Interventions ce mois</div>
                        <div class="fs-2 fw-bold text-primary">2</div>
                        <div class="text-muted small">1 terminée</div>
                    </div>
                </div>
                <div class="col-md-4">
                     <div class="widget-card text-center">
                        <div class="text-muted">Taux de réussite</div>
                        <div class="fs-2 fw-bold text-success">50%</div>
                        <div class="text-muted small">Interventions réussies</div>
                    </div>
                </div>
                <div class="col-md-4">
                     <div class="widget-card text-center">
                        <div class="text-muted">Véhicules actifs</div>
                        <div class="fs-2 fw-bold" style="color:#6f42c1;">1/3</div>
                        <div class="text-muted small">Véhicules disponibles</div>
                    </div>
                </div>
            </div>
             <div class="widget-card mt-4">
                <div class="text-center p-5">
                     <div style="font-size:3rem;color:#cbd5e1;"><i class="bx bx-bar-chart-alt-2"></i></div>
                     <h4 class="mt-3">Données de performance non disponibles</h4>
                     <p class="text-muted">Les graphiques et les statistiques de performance pour cette équipe seront affichés ici.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 