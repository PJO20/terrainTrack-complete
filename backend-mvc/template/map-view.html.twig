    .mapview-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #e5e7eb;
      background: #fff;
      color: #1f2937;
      flex-wrap: wrap;
      gap: 1rem;
      flex-shrink: 0;
