{% extends "base.html.twig" %}

{% block title %}{{ page_title }}{% endblock %}

{% block extra_css %}
<style>
.two-factor-container {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.two-factor-header {
    text-align: center;
    margin-bottom: 2rem;
}

.two-factor-header h1 {
    color: #1e293b;
    margin-bottom: 0.5rem;
}

.two-factor-header p {
    color: #64748b;
    margin: 0;
}

.status-card {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.status-enabled {
    background: #f0fdf4;
    border-color: #22c55e;
}

.status-disabled {
    background: #fef2f2;
    border-color: #ef4444;
}

.status-required {
    background: #fef3c7;
    border-color: #f59e0b;
}

.status-indicator {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.status-dot.enabled {
    background: #22c55e;
}

.status-dot.disabled {
    background: #ef4444;
}

.status-dot.required {
    background: #f59e0b;
}

.status-text {
    font-weight: 600;
    color: #1e293b;
}

.status-description {
    color: #64748b;
    font-size: 0.9rem;
    margin-top: 0.5rem;
}

.action-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
}

.btn {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
}

.btn-primary {
    background: #2563eb;
    color: white;
}

.btn-primary:hover {
    background: #1d4ed8;
}

.btn-danger {
    background: #ef4444;
    color: white;
}

.btn-danger:hover {
    background: #dc2626;
}

.btn-secondary {
    background: #6b7280;
    color: white;
}

.btn-secondary:hover {
    background: #4b5563;
}

.verification-form {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 1.5rem;
    display: none;
}

.verification-form.show {
    display: block;
}

.form-group {
    margin-bottom: 1rem;
}

.form-label {
    display: block;
    font-weight: 600;
    color: #374151;
    margin-bottom: 0.5rem;
}

.form-input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 1rem;
}

.form-input:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.backup-codes {
    background: #fef3c7;
    border: 1px solid #f59e0b;
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 1.5rem;
    display: none;
}

.backup-codes.show {
    display: block;
}

.backup-codes h3 {
    color: #92400e;
    margin: 0 0 1rem 0;
}

.backup-codes p {
    color: #92400e;
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
}

.backup-codes-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
    font-family: monospace;
    font-size: 0.9rem;
    color: #92400e;
}

.alert {
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1rem;
}

.alert-success {
    background: #f0fdf4;
    border: 1px solid #22c55e;
    color: #166534;
}

.alert-error {
    background: #fef2f2;
    border: 1px solid #ef4444;
    color: #dc2626;
}

.alert-info {
    background: #f0f7ff;
    border: 1px solid #3b82f6;
    color: #1e40af;
}
</style>
{% endblock %}

{% block content %}
<div class="two-factor-container">
    <div class="two-factor-header">
        <h1>üîê Authentification √† deux facteurs</h1>
        <p>S√©curisez votre compte avec une couche suppl√©mentaire de protection</p>
    </div>

    {% if two_factor_required %}
    <div class="alert alert-info">
        <strong>‚ö†Ô∏è Obligatoire :</strong> L'authentification √† deux facteurs est obligatoire pour votre r√¥le d'administrateur.
    </div>
    {% endif %}

    <div class="status-card {% if two_factor_enabled %}status-enabled{% else %}status-disabled{% endif %}">
        <div class="status-indicator">
            <div class="status-dot {% if two_factor_enabled %}enabled{% else %}disabled{% endif %}"></div>
            <div class="status-text">
                {% if two_factor_enabled %}
                    Authentification √† deux facteurs activ√©e
                {% else %}
