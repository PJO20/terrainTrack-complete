    <!-- Codes de r√©cup√©ration -->
    <div class="backup-codes" id="backup-codes">
        <h3>üîë Codes de r√©cup√©ration</h3>
        <p>Conservez ces codes en lieu s√ªr. Ils vous permettront de vous connecter si vous n'avez pas acc√®s √† votre e-mail.</p>
        <div class="backup-codes-list" id="backup-codes-list"></div>
        <p><strong>‚ö†Ô∏è Important :</strong> Chaque code ne peut √™tre utilis√© qu'une seule fois.</p>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const enableBtn = document.getElementById('enable-2fa-btn');
    const disableBtn = document.getElementById('disable-2fa-btn');
    const regenerateBtn = document.getElementById('regenerate-backup-btn');
    const verificationForm = document.getElementById('verification-form');
    const backupCodes = document.getElementById('backup-codes');
    const verifyForm = document.getElementById('verify-code-form');
    const cancelBtn = document.getElementById('cancel-verification-btn');

    // Activer la 2FA
    if (enableBtn) {
        enableBtn.addEventListener('click', function() {
            console.log('üîê Activation de la 2FA...');
            
            fetch('/security/two-factor/enable', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Code de v√©rification envoy√© par e-mail', 'success');
                    verificationForm.classList.add('show');
                } else {
                    showNotification('Erreur: ' + data.error, 'error');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                showNotification('Erreur de connexion', 'error');
            });
        });
    }

    // D√©sactiver la 2FA
    if (disableBtn) {
        disableBtn.addEventListener('click', function() {
            if (confirm('√ätes-vous s√ªr de vouloir d√©sactiver l\'authentification √† deux facteurs ?')) {
                console.log('üîê D√©sactivation de la 2FA...');
                
                fetch('/security/two-factor/disable', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Authentification √† deux facteurs d√©sactiv√©e', 'success');
                        location.reload();
                    } else {
                        showNotification('Erreur: ' + data.error, 'error');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    showNotification('Erreur de connexion', 'error');
                });
            }
        });
    }

    // V√©rification du code
    if (verifyForm) {
        verifyForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const code = document.getElementById('verification-code').value;
            console.log('üîê V√©rification du code:', code);
            
            fetch('/security/two-factor/verify', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'code=' + encodeURIComponent(code)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Authentification √† deux facteurs activ√©e !', 'success');
                    verificationForm.classList.remove('show');
                    
                    if (data.backup_codes) {
                        displayBackupCodes(data.backup_codes);
                    }
                    
                    setTimeout(() => location.reload(), 2000);
                } else {
                    showNotification('Erreur: ' + data.error, 'error');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                showNotification('Erreur de connexion', 'error');
            });
        });
    }

    // Annuler la v√©rification
    if (cancelBtn) {
        cancelBtn.addEventListener('click', function() {
            verificationForm.classList.remove('show');
        });
    }

    // Afficher les codes de r√©cup√©ration
    function displayBackupCodes(codes) {
        const codesList = document.getElementById('backup-codes-list');
        codesList.innerHTML = '';
        
        codes.forEach(code => {
            const codeElement = document.createElement('div');
            codeElement.textContent = code;
            codeElement.style.padding = '0.5rem';
            codeElement.style.background = 'white';
            codeElement.style.border = '1px solid #f59e0b';
            codeElement.style.borderRadius = '4px';
            codeElement.style.textAlign = 'center';
            codesList.appendChild(codeElement);
        });
        
        backupCodes.classList.add('show');
    }

    // Fonction pour afficher les notifications
    function showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 8px;
            color: white;
            font-weight: 500;
            z-index: 10000;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        `;
        
        if (type === 'success') {
            notification.style.background = '#10b981';
        } else if (type === 'error') {
            notification.style.background = '#ef4444';
        } else {
            notification.style.background = '#3b82f6';
        }
        
        notification.textContent = message;
        document.body.appendChild(notification);
        
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 5000);
    }
});
</script>
{% endblock %}
