<script>
document.addEventListener('DOMContentLoaded', function () {
    let map = null; // D√©clarer la carte ici pour qu'elle soit accessible partout
    
    // Coordonn√©es approximatives pour les v√©hicules (√† remplacer par les vraies donn√©es)
    const vehicles = [
        { name: 'Tracteur John Deere', lat: 48.8566, lon: 2.3522, status: 'Disponible' },
        { name: 'Quad Polaris', lat: 48.86, lon: 2.36, status: 'En intervention' }
    ];

    if (vehicles.length > 0) {
        // Initialiser la carte, centr√©e sur le premier v√©hicule
        map = L.map('map').setView([vehicles[0].lat, vehicles[0].lon], 13);

        // Ajouter un fond de carte OpenStreetMap
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery ¬© <a href="https://www.mapbox.com/">Mapbox</a>',
        }).addTo(map);

        // Ajouter des marqueurs pour chaque v√©hicule
        vehicles.forEach(vehicle => {
            const marker = L.marker([vehicle.lat, vehicle.lon]).addTo(map);
            marker.bindPopup(`<b>${vehicle.name}</b><br>${vehicle.status}`);
        });

        // Forcer le redimensionnement apr√®s un court d√©lai pour corriger le rendu initial
        setTimeout(function() {
            map.invalidateSize();
        }, 100);

    } else {
        // G√©rer le cas o√π il n'y a pas de v√©hicules √† afficher
        document.getElementById('map').innerHTML = '<div class="text-center p-5 text-muted">Aucun v√©hicule avec des donn√©es de localisation pour cette √©quipe.</div>';
    }

    // Forcer la carte √† se redessiner quand son onglet est montr√©
    const overviewTab = document.querySelector('a[data-bs-toggle="tab"][href="#tab-overview"]');
    if (overviewTab && window.bootstrap) {
        overviewTab.addEventListener('shown.bs.tab', function () {
