<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>{{ title|default('Login - TerrainTrack') }}</title>
  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background: #f8f9fb;
      min-height: 100vh;
      margin: 0;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .container {
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .logo {
      background: #2346a9;
      color: #fff;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem auto;
      font-size: 1.8rem;
    }
    .title {
      font-size: 2.2rem;
      font-weight: 700;
      color: #181c2a;
      margin-bottom: 0.5rem;
      text-align: center;
    }
    .subtitle {
      color: #555;
      font-size: 1.08rem;
      margin-bottom: 2.2rem;
      text-align: center;
    }
    .subtitle a {
      color: #2346a9;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.2s;
    }
    .subtitle a:hover {
      color: #1d357a;
      text-decoration: underline;
    }
    .form-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 16px rgba(30,40,90,0.08);
      padding: 2.2rem 2.5rem 2.5rem 2.5rem;
      min-width: 350px;
      max-width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .form-group {
      width: 100%;
      margin-bottom: 1.5rem;
    }
    .form-group label {
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 0.5rem;
      display: block;
      color: #222;
    }
    .form-group input[type="email"], .form-group input[type="password"], .form-group input[type="text"] {
      width: 100%;
      padding: 0.7rem 1rem;
      border: 1px solid #e0e0e0;
      border-radius: 6px;
      font-size: 1rem;
      background: #f7f7fa;
      outline: none;
      transition: border 0.2s;
      box-sizing: border-box;
    }
    .password-wrapper {
      position: relative;
      width: 100%;
    }
    .password-toggle {
      position: absolute;
      right: 0.7rem;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      cursor: pointer;
      color: #666;
      font-size: 1rem;
      padding: 0.3rem;
      transition: color 0.2s;
      z-index: 10;
    }
    .password-toggle:hover {
      color: #333;
    }
    .form-group input[type="password"], .form-group input[type="text"] {
      padding-right: 2.8rem;
    }
    .form-group input[type="email"]:focus, .form-group input[type="password"]:focus, .form-group input[type="text"]:focus {
      border-color: #2346a9;
      background: #fff;
    }
    .login-options {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
      font-size: 0.9rem;
      gap: 1rem;
      padding: 0 0.5rem;
    }
    .login-options label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #222;
        flex-shrink: 0;
    }
    .login-options a {
        color: #2346a9;
        text-decoration: none;
        font-weight: 500;
        flex-shrink: 0;
        white-space: nowrap;
    }
    .login-options a:hover {
        color: #1d357a;
        text-decoration: underline;
    }
    .submit-btn {
      width: 100%;
      background: #2346a9;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 0.9rem 0;
      font-size: 1.08rem;
      font-weight: 600;
      cursor: pointer;
      margin-bottom: 0.2rem;
      transition: background 0.2s;
    }
    .submit-btn:hover {
      background: #1d357a;
    }
    .login-divider {
      display: flex;
      align-items: center;
      text-align: center;
      color: #666;
      margin: 1.5rem 0;
    }
    .login-divider::before, .login-divider::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid #e0e0e0;
    }
    .login-divider:not(:empty)::before {
      margin-right: .75em;
    }
    .login-divider:not(:empty)::after {
      margin-left: .75em;
    }
    .login-register {
      font-size: 0.95rem;
      color: #222;
    }
    .login-register a {
      color: #2346a9;
      text-decoration: none;
      font-weight: 500;
    }
    .login-register a:hover {
      color: #1d357a;
      text-decoration: underline;
    }
    .alert {
      padding: 1em;
      border-radius: 6px;
      margin-bottom: 1.5rem;
      text-align: center;
      border: 1px solid;
    }
    .alert-success {
      background: #dcfce7;
      color: #166534;
      border-color: #86efac;
    }
    .alert-error {
      background: #fef2f2;
      color: #dc2626;
      border-color: #fca5a5;
    }
    @media (max-width: 500px) {
      .form-card {
        min-width: 90vw;
        padding: 1.2rem 0.5rem 1.5rem 0.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="logo">
      <i class="fa-solid fa-truck"></i>
    </div>
    <div class="title">TerrainTrack</div>
    <div class="subtitle">Connectez-vous à votre compte</div>

    {% if success %}
      <div class="alert alert-success">
        <i class="fa-solid fa-check-circle" style="margin-right: 0.5rem;"></i>
        {{ success }}
      </div>
    {% endif %}

    {% if error %}
      <div class="alert alert-error">
        {% if 'session a expiré' in error %}
          <i class="fa-solid fa-clock" style="margin-right: 0.5rem;"></i>
        {% elseif 'Identifiants incorrects' in error %}
          <i class="fa-solid fa-exclamation-triangle" style="margin-right: 0.5rem;"></i>
        {% else %}
          <i class="fa-solid fa-exclamation-circle" style="margin-right: 0.5rem;"></i>
        {% endif %}
        {{ error }}
      </div>
    {% endif %}

    <form class="form-card" method="POST">
      {{ csrf_token_field|raw }}
      <div class="form-group">
        <label for="email">Adresse e-mail</label>
        <input id="email" type="email" name="email" placeholder="votre@email.com" required 
               value="{{ email ?? '' }}">
      </div>
      <div class="form-group">
        <label for="password">Mot de passe</label>
        <div class="password-wrapper">
            <input id="password" type="password" name="password" placeholder="********" required>
            <button type="button" class="password-toggle" onclick="togglePassword()" aria-label="Afficher/Masquer le mot de passe">
                <i class="fa-solid fa-eye-slash" id="password-icon"></i>
            </button>
        </div>
      </div>
      <div class="login-options">
        <label><input type="checkbox" name="remember_me"> Se souvenir de moi</label>
        <a href="/reset-password">Mot de passe oublié ?</a>
      </div>
      <button class="submit-btn" type="submit">Se connecter</button>
    </form>
    <div class="login-divider">Ou</div>
    <div class="login-register">
      Pas encore de compte ? <a href="/register">Créer un compte</a>
    </div>
  </div>

  <script>
    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const passwordIcon = document.getElementById('password-icon');
      
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        passwordIcon.className = 'fa-regular fa-eye';
      } else {
        passwordInput.type = 'password';
        passwordIcon.className = 'fa-regular fa-eye-slash';
      }
    }
    
    document.addEventListener('DOMContentLoaded', function() {
      const passwordIcon = document.getElementById('password-icon');
      if (passwordIcon) {
        passwordIcon.className = 'fa-regular fa-eye-slash';
      }
    });
  </script>
</body>
</html> 