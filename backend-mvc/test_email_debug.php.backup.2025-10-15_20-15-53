}

// 2. V√©rifier les utilisateurs
try {
    $stmt = $pdo->prepare("SELECT id, name, email FROM users WHERE email = 'momo@gmail.com'");
    $stmt->execute();
    $user = $stmt->fetch();
    
    if ($user) {
        echo "‚úÖ Utilisateur trouv√©: {$user['name']} ({$user['email']})\n";
        $userId = $user['id'];
    } else {
        echo "‚ùå Utilisateur momo@gmail.com non trouv√©\n";
        exit;
    }
} catch (Exception $e) {
    echo "‚ùå Erreur lors de la recherche de l'utilisateur: " . $e->getMessage() . "\n";
    exit;
}

// 3. V√©rifier les pr√©f√©rences
try {
    $stmt = $pdo->prepare("SELECT * FROM notification_preferences WHERE user_id = ?");
    $stmt->execute([$userId]);
    $preferences = $stmt->fetch();
    
    if ($preferences) {
        echo "‚úÖ Pr√©f√©rences trouv√©es:\n";
